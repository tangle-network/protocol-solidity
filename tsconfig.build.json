{
  "exclude": [
    "node_modules/**/*",
    "**/node_modules/**/*",
  ],
  "include": [
    "packages/**/*",
    "scripts/**/*",
  ],
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "noEmitOnError": true,
    "skipLibCheck": true,
    "preserveSymlinks": true
  }
}