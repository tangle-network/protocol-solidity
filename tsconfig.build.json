{
  "exclude": [
    "node_modules/**/*",
    "**/node_modules/**/*",
  ],
  "include": [
    "packages/**/*",
    "scripts/**/*",
    "test/**/*",
    "./hardhat.config.ts"
  ],
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "noEmitOnError": true,
    "skipLibCheck": true
  },
}