{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      /**
      *   Solidity contracts & Typechain
      */
      "@webb-tools/contracts": [
        "packages/contracts/typechain-types"
      ],
      "@webb-tools/contracts/*": [
        "packages/contracts/typechain-types/*"
      ],
      "@webb-tools/protocol-solidity": [
        "packages/contracts/contracts"
      ],
      "@webb-tools/protocol-solidity/*": [
        "packages/contracts/contracts/*"
      ],

      /**
      *   TypeScript packages
      */
      "@webb-tools/anchors": [
        "packages/anchors/src"
      ],
      "@webb-tools/anchors/*": [
        "packages/anchors/src/*"
      ],
      "@webb-tools/evm-test-utils": [
        "packages/evm-test-utils/src"
      ],
      "@webb-tools/evm-test-utils/*": [
        "packages/evm-test-utils/src/*"
      ],
      "@webb-tools/create2-utils": [
        "packages/create2-utils"
      ],
      "@webb-tools/create2-utils/*": [
        "packages/create2-utils/*"
      ],
      "@webb-tools/interfaces": [
        "packages/interfaces"
      ],
      "@webb-tools/interfaces/*": [
        "packages/interfaces/*"
      ],
      "@webb-tools/tokens": [
        "packages/tokens"
      ],
      "@webb-tools/tokens/*": [
        "packages/tokens/*"
      ],
      "@webb-tools/utils": [
        "packages/utils"
      ],
      "@webb-tools/utils/*": [
        "packages/utils/*"
      ],
      "@webb-tools/vbridge": [
        "packages/vbridge"
      ],
      "@webb-tools/vbridge/*": [
        "packages/vbridge/*"
      ],
    },
    "noEmit": true
  }
}